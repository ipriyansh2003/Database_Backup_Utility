    <style>
        body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background: url('https://media.istockphoto.com/id/1399944678/photo/multiple-database-is-placed-on-relational-database-tables-with-server-room-and-datacenter.jpg?s=612x612&w=0&k=20&c=SBaXkPg5hWPX2K5BkTyH8lhX82Get_MIWDpeTZeUnOU=') no-repeat center center fixed;
    background-size: cover;
    text-align: center;
}

/* Navigation Bar */
nav {
    background: #333;
    padding: 15px;
}

nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
}

nav ul li {
    display: inline;
    margin: 0 15px;
}

nav ul li a {
    color: white;
    text-decoration: none;
    font-size: 18px;
    transition: color 0.3s;
}

nav ul li a:hover {
    color: #ffcc00;
}

/* Header */
header {
    background: rgba(0, 123, 255, 0.8);
    color: white;
    padding: 10px 20px;
    box-shadow: 0px 4px 10px rgba(0,0,0,0.1);
    border-bottom-left-radius: 20px;
    border-bottom-right-radius: 20px;
}

/* Section */
section {
    margin: 20px auto;
    padding: 20px;
    max-width: 800px;
    background: rgb(69, 105, 133);
    border-radius: 8px;
    box-shadow: 0px 0px 10px rgba(0,0,0,0.1);
    transition: transform 0.3s ease-in-out;
}

section:hover {
    transform: scale(1.02);
}

/* Footer */
footer {
    background: #333;
    color: white;
    padding: 10px;
    position: fixed;
    bottom: 0;
    width: 100%;
    font-size: 14px;
}

/* Database Boxes */
.database-container {
    
    display: flex;
    justify-content: center;
    gap: 20px;
    margin: 30px 0;
}

.database-box {
    background: rgb(170, 242, 128);
    border-radius: 20px;
    box-shadow: 0px 0px 10px rgba(0,0,0,0.1);
    padding: 20px;
    text-align: center;
    width: 350px;
    height: 250px;
    transition: transform 0.3s ease-in-out;
}

.database-box:hover {
    transform: scale(1.05);
}

.database-box img {
    width: 200px;
    height: 100px;
    object-fit: cover;
}
